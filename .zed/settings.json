// Zed settings by Aldo R. Robles
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 18,
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "notification_panel": {
    "dock": "right"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night"
  },
  "languages": {
    "TSX": {
      "inlay_hints": {
        "enabled": false
      },
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false
      },
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
      }
    }
  }
}
